{
	"name": "simple-auth",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev:bun": "bun --watch src/server.ts",
		"dev:nodemon": "nodemon",
		"dev": "bun run --watch src/server.ts",
		"build": "tsc",
		"db:migrate": "bun run src/scripts/migrate.ts",
		"db:status": "bun run src/scripts/status.ts",
		"db:seed": "bun run src/scripts/seed.ts",
		"db:drop": "bun run src/scripts/drop.ts",
		"db:reset": "bun run db:drop && bun run db:migrate && bun run db:seed",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs",
		"start:with-docs": "bun run docs:build && bun run src/server.ts",
		"check": "biome check .",
		"check:unsafe": "biome check --write --unsafe .",
		"check:write": "biome check --write .",
		"knip": "knip"
	},
	"nodemonConfig": {
		"watch": [
			"src"
		],
		"exec": "bun run src/server.ts",
		"ext": "ts,js,json"
	},
	"engines": {
		"bun": "1.x"
	},
	"dependencies": {
		"bcrypt": "^5.1.1",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"jsonwebtoken": "^9.0.2",
		"pg": "^8.11.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.11.30",
		"@types/pg": "^8.11.6",
		"@types/supertest": "^2.0.16",
		"@types/bun": "latest",
		"jest": "^29.7.0",
		"supertest": "^6.3.4",
		"ts-jest": "^29.1.2",
		"vitest": "^1.6.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
